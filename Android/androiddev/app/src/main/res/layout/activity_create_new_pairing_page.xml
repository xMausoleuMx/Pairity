<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_create_new_pairing_page"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="comxmausoleumx.httpsgithub.pairity.createNewPairingPage">

    <TextView
            android:text="/SD/Pics"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" android:layout_marginTop="45dp" android:id="@+id/selectedPAth"/>
    <Button
            android:text="Browse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_below="@+id/selectedPAth"
            android:layout_centerHorizontal="true" android:layout_marginTop="30dp" android:id="@+id/browseFoldersButton"/>
    <Button
            android:text="Create"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/createButton" android:layout_below="@+id/browseFoldersButton"
            android:layout_alignLeft="@+id/browseFoldersButton" android:layout_alignStart="@+id/browseFoldersButton"
            android:layout_marginTop="63dp"/>
</RelativeLayout>
